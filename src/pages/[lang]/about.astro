---
import Layout from '../../layouts/Layout.astro';
import { Header } from '../../components/Header';
import { Footer } from '../../components/Footer';
import { ui } from '../../i18n/ui';
import { motion } from 'framer-motion';

export function getStaticPaths() {
  return [
    {params: {lang: 'en'}},
    {params: {lang: 'zh'}},
  ];
}

const { lang } = Astro.params;
const currentLang = (lang as 'en' | 'zh') || 'en';
const content = ui[currentLang];
---

<Layout title={`${content['about.title']} - RelayCraft`} description={content['about.subtitle']} lang={currentLang}>
  <Header client:load lang={currentLang} content={content} />
  
  <main class="pt-32 pb-20 overflow-hidden">
    <div class="container px-4 md:px-6 mx-auto max-w-4xl">
      {/* Hero Section */}
      <section class="text-center mb-24">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-foreground to-foreground/70">
          {content['about.title']}
        </h1>
        <p class="text-xl text-muted-foreground font-medium max-w-2xl mx-auto">
          {content['about.subtitle']}
        </p>
      </section>

      <div class="space-y-24">
        {/* Story Section */}
        <section class="grid grid-cols-1 md:grid-cols-12 gap-12 items-center">
          <div class="md:col-span-12">
            <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
              <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary text-lg">01</span>
              {content['about.story.title']}
            </h2>
            <div class="prose prose-lg dark:prose-invert max-w-none text-muted-foreground leading-relaxed">
              <p>{content['about.story.content']}</p>
            </div>
          </div>
        </section>

        {/* Vibe Coding Section */}
        <section class="relative p-8 md:p-12 rounded-3xl bg-secondary/30 border border-white/5 overflow-hidden">
          <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -mr-32 -mt-32"></div>
          <div class="relative z-10">
            <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
              <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary text-lg">02</span>
              {content['about.vibe.title']}
            </h2>
            <div class="prose prose-lg dark:prose-invert max-w-none text-muted-foreground leading-relaxed">
              <p>{content['about.vibe.content']}</p>
            </div>
          </div>
        </section>

        {/* Team Section */}
        <section>
          <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
            <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary text-lg">03</span>
            {content['about.team.title']}
          </h2>
          <div class="prose prose-lg dark:prose-invert max-w-none text-muted-foreground leading-relaxed">
            <p>{content['about.team.content']}</p>
          </div>
          
          <div class="mt-12 p-8 rounded-2xl border border-dashed border-border flex flex-col items-center text-center">
             <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
             </div>
             <p class="text-sm font-medium">RelayCraft is an open-source movement.</p>
             <p class="text-xs text-muted-foreground mt-1">Join 50+ contributors on GitHub.</p>
          </div>
        </section>
      </div>
    </div>
  </main>
  
  <Footer content={content} />
</Layout>
