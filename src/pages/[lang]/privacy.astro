---
import Layout from '../../layouts/Layout.astro';
import { Header } from '../../components/Header';
import { Footer } from '../../components/Footer';
import { ui } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'en'}},
    {params: {lang: 'zh'}},
  ];
}

const { lang } = Astro.params;
const currentLang = (lang as 'en' | 'zh') || 'en';
const content = ui[currentLang];
---

<Layout title={`${content['privacy.title']} - RelayCraft`} description={content['privacy.intro']} lang={currentLang}>
  <Header client:load lang={currentLang} content={content} />
  
  <main class="pt-32 pb-20">
    <div class="container px-4 md:px-6 mx-auto max-w-3xl">
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-foreground">
          {content['privacy.title']}
        </h1>
        <p class="text-sm font-medium text-muted-foreground">
          {content['privacy.lastUpdated']}
        </p>
      </header>

      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="lead text-xl text-muted-foreground font-medium mb-10">
          {content['privacy.intro']}
        </p>

        <section class="mb-10">
          <h2 class="text-2xl font-bold mb-4 text-foreground">{content['privacy.local.title']}</h2>
          <p>{content['privacy.local.content']}</p>
        </section>

        <section class="mb-10">
          <h2 class="text-2xl font-bold mb-4 text-foreground">{content['privacy.collection.title']}</h2>
          <p>{content['privacy.collection.content']}</p>
        </section>

        <section class="mb-10">
          <h2 class="text-2xl font-bold mb-4 text-foreground">{content['privacy.ai.title']}</h2>
          <p>{content['privacy.ai.content']}</p>
        </section>

        <section class="mb-10">
          <h2 class="text-2xl font-bold mb-4 text-foreground">{content['privacy.security.title']}</h2>
          <p>{content['privacy.security.content']}</p>
        </section>
      </div>
    </div>
  </main>
  
  <Footer content={content} />
</Layout>
