---
import Layout from '../../../layouts/Layout.astro';
import { Header } from '../../../components/Header';
import { Footer } from '../../../components/Footer';
import { getCollection } from 'astro:content';
import { ui } from '../../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'en'}},
    {params: {lang: 'zh'}},
  ];
}

const { lang } = Astro.params;
const currentLang = (lang as 'en' | 'zh') || 'en';

const blogEntries = await getCollection('blog', ({ data }) => {
  return data.draft !== true && data.lang === currentLang;
});

// Sort by date descending
const posts = blogEntries.sort((a, b) => 
  new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

const content = ui[currentLang];

function formatDate(date: Date) {
  return new Date(date).toLocaleDateString(currentLang === 'zh' ? 'zh-CN' : 'en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function calculateReadingTime(content: string) {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
}
---

<Layout title={`${content['blog.title']} - RelayCraft`} description={content['blog.subtitle']} lang={currentLang}>
  <Header client:load lang={currentLang} content={content} />
  
  <main class="pt-24 pb-20">
    <div class="container px-4 md:px-6 mx-auto">
      {/* Hero Section */}
      <div class="text-center mb-16 relative">
        <div class="absolute inset-0 -z-10">
          <div class="absolute top-0 left-1/2 -translate-x-1/2 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-foreground">
          {content['blog.title']}
        </h1>
        <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed font-medium">
          {content['blog.subtitle']}
        </p>
      </div>

      {/* Featured Post */}
      {posts.length > 0 && posts[0].data.featured && (
        <a href={`/${currentLang}/blog/${posts[0].slug}`} class="block mb-16 group">
          <article class="relative rounded-2xl overflow-hidden bg-card border border-border/50 hover:border-primary/30 transition-all duration-500 shadow-sm hover:shadow-xl hover:shadow-primary/5">
            <div class="absolute inset-0 bg-gradient-to-tr from-primary/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative p-8 md:p-10">
              <div class="flex flex-wrap items-center gap-3 mb-5 text-muted-foreground">
                <span class="inline-flex items-center rounded-full bg-primary/10 border border-primary/20 px-4 py-1.5 text-sm font-semibold text-primary">
                  {content['blog.featured']}
                </span>
                <span class="text-sm font-medium">
                  {formatDate(posts[0].data.pubDate)}
                </span>
                <span class="text-sm text-muted-foreground/50">
                  •
                </span>
                <span class="text-sm font-medium">
                  {calculateReadingTime(posts[0].body || '')} {content['blog.min_read']}
                </span>
              </div>
              <h2 class="text-2xl md:text-3xl font-bold mb-4 text-foreground group-hover:text-primary transition-colors duration-300">
                {posts[0].data.title}
              </h2>
              <p class="text-muted-foreground mb-6 text-lg leading-relaxed font-medium">
                {posts[0].data.description}
              </p>
                <div class="flex items-center gap-4">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-foreground font-medium text-sm shadow-lg shadow-primary/20">
                    {posts[0].data.author.split(' ').map(n => n[0]).join('')}
                  </div>
                  <div>
                    <div class="font-semibold text-foreground">{posts[0].data.author}</div>
                  </div>
                </div>
              </div>
            </div>
          </article>
        </a>
      )}

      {/* Section Title */}
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-foreground">{content['blog.latest_articles']}</h2>
        <a href="/rss.xml" class="text-sm text-muted-foreground hover:text-primary transition-colors flex items-center gap-1.5 font-medium">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 11a9 9 0 0 1 9 9"/><path d="M4 4a16 16 0 0 1 16 16"/><circle cx="5" cy="19" r="1"/></svg>
          {content['blog.rss']}
        </a>
      </div>

      {/* Post Grid */}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.slice(posts[0]?.data.featured ? 1 : 0).map((post) => (
          <a href={`/${currentLang}/blog/${post.slug}`} class="group">
            <article class="h-full rounded-2xl border border-border/50 bg-card overflow-hidden hover:border-primary/30 hover:shadow-xl hover:shadow-primary/5 transition-all duration-300 shadow-sm">
              {/* Gradient accent */}
              <div class="h-1 bg-gradient-to-r from-primary via-purple-500 to-pink-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="p-6">
                <div class="flex items-center gap-2 mb-4 text-sm text-muted-foreground font-medium">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  <span>•</span>
                  <span>{calculateReadingTime(post.body || '')} {content['blog.min_read']}</span>
                </div>
                <h3 class="text-lg font-bold mb-3 text-foreground group-hover:text-primary transition-colors duration-300 line-clamp-2">
                  {post.data.title}
                </h3>
                <p class="text-muted-foreground text-sm leading-relaxed line-clamp-3 mb-5">
                  {post.data.description}
                </p>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.slice(0, 3).map((tag: string) => (
                      <span class="inline-flex items-center rounded-lg bg-muted px-2.5 py-1 text-xs font-semibold text-muted-foreground">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          </a>
        ))}
      </div>

      {/* Empty State */}
      {posts.length === 0 && (
        <div class="text-center py-20">
          <div class="w-16 h-16 rounded-full bg-muted flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-muted-foreground" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg>
          </div>
          <p class="text-muted-foreground font-medium">{content['blog.no_posts']}</p>
        </div>
      )}
    </div>
  </main>
  
  <Footer content={content} />
</Layout>
